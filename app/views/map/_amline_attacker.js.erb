AmCharts.ready(function () {
    // SERIAL CHART
    chart = new AmCharts.AmSerialChart();

    var randomData = [];
    <% date = Date.today %>
    <% 100.downto(0) do |i| %>
        randomData.push({
            "date": "<%= (date - i).to_s %>",
            "value": "<%= rand(100) + 30 %>"
        })
    <% end %>
    chart.dataProvider = <%= rand(3).zero? ? 'dateData' : 'randomData' %>;  //randomData; // dateData; // yearData;

    chart.marginLeft = 40; // 10;
    chart.marginRight = 10;
    chart.autoMarginOffset = 20;
    chart.categoryField = "date"; // "year";
    chart.dataDateFormat = "YYYY-MM-DD"; // "YYYY";
    chart.pathToImages = "/images/amcharts/";
    chart.language = "zh";

    // listen for "dataUpdated" event (fired when chart is inited) and call zoomChart method when it happens
//    chart.addListener("dataUpdated", zoomChart);

    // AXES
    // category
    var categoryAxis = chart.categoryAxis;
    categoryAxis.parseDates = true; // as our data is date-based, we set parseDates to true
//    categoryAxis.minPeriod = "YYYY"; // our data is yearly, so we set minPeriod to YYYY
    categoryAxis.dashLength = 1; // 3;
    categoryAxis.minorGridEnabled = true;
//    categoryAxis.minorGridAlpha = 0.1;

    // value
    var valueAxis = new AmCharts.ValueAxis();
    valueAxis.id = "v<%= index %>";
    valueAxis.axisAlpha = 0;
    valueAxis.position = "left";
    valueAxis.ignoreAxisWidth = true;
//    valueAxis.inside = true;
//    valueAxis.dashLength = 3;
    chart.addValueAxis(valueAxis);

    // balloon
    var balloon = chart.balloon;
    balloon.borderThickness = 1;
    balloon.shadowAlpha = 0;

    // GRAPH
    graph = new AmCharts.AmGraph();
    graph.id = "g<%= index %>";
    graph.balloon = {
        "drop": true,
        "adjustBorderColor": false,
        "color": "#FFFFFF",
        "type": "smoothedLine"
    };
    graph.fillAlphas = 0.2;
//    graph.type = "smoothedLine"; // this line makes the graph smoothed line.
    graph.lineColor = "hsl(<%= color %>, 100%, 50%)" //"#00aa00"; // "#d1655d";
//    graph.negativeLineColor = "#637bb6"; // this line makes the graph to change color when it drops below 0
    graph.bullet = "round";
//    graph.bulletBorderColor = "#FFFFFF";
    graph.bulletBorderAlpha = 1;
    graph.bulletColor = "#FFFFFF";
    graph.bulletSize = 5; // 8;
    graph.hideBulletsCount = 50; // 50;
//    graph.bulletBorderThickness = 2;
    graph.lineThickness = 2;
    graph.title = "red line";
    graph.useLineColorForBulletBorder = true;
    graph.valueField = "value";
    graph.balloonText = "<span style='font-size:18px;'>[[value]]</span>"; // "[[category]]<br><b><span style='font-size:14px;'>[[value]]</span></b>";
    chart.addGraph(graph);

    // CURSOR
    var chartCursor = new AmCharts.ChartCursor();
    chartCursor.valueLineEnabled = true;
    chartCursor.valueLineBalloonEnabled = true;
    chartCursor.cursorAlpha = 0;
    chartCursor.zoomable = false;
    chartCursor.valueZoomable = true;
    chartCursor.valueLineAlpha = 0.5;
//    chartCursor.cursorPosition = "mouse";
//    chartCursor.categoryBalloonDateFormat = "YYYY";
    chart.addChartCursor(chartCursor);

    // SCROLLBAR
    var chartScrollbar = new AmCharts.ChartScrollbar();
    chartScrollbar.autoGridCount = true;
    chartScrollbar.backgroundAlpha = 0.5;
    chartScrollbar.backgroundColor = "#000000";
    chartScrollbar.color = "#000000";
    chartScrollbar.dragIcon = "dragIconRoundSmallBlack";
    chartScrollbar.dragIconWidth = 20;
    chartScrollbar.gridColor = "#008888";
    chartScrollbar.selectedBackgroundAlpha = 0.2;
    chartScrollbar.selectedBackgroundColor = "#00FFFF";
    chartScrollbar.scrollbarHeight = 10;
    chart.addChartScrollbar(chartScrollbar);

    chart.creditsPosition = "bottom-right";

    // WRITE
    chart.write("amcharts_line_<%= attacker %>");
});

